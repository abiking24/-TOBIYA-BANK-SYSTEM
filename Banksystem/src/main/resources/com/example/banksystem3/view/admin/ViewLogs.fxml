<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" style="-fx-padding: 20; -fx-background-color: #ecf0f1;" 
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.example.banksystem3.client.controller.admin.ViewLogsController">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #34495e; -fx-padding: 15; -fx-border-radius: 5;">
        <Label text="ðŸ“œ System Logs" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="ðŸ”„ Refresh Logs" onAction="#handleRefresh" 
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
    </HBox>

    <!-- Logs Table -->
    <TableView fx:id="logsTable" VBox.vgrow="ALWAYS" style="-fx-font-family: 'Consolas', monospace;">
        <columns>
            <TableColumn fx:id="logColumn" text="Log Entry" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

</VBox>