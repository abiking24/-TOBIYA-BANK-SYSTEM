<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="20" style="-fx-padding: 20; -fx-background-color: #F4F7F6;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.banksystem3.client.controller.customer.TransactionHistoryController">
    
    <VBox spacing="5">
        <Text style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #0056B3;" text="Transaction History" />
        <Text style="-fx-font-size: 14px; -fx-fill: #666666;" text="View your recent deposits, transfers, and payments." />
    </VBox>

    <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 1);">
        <Label text="Select Account:" style="-fx-font-weight: bold;"/>
        <ComboBox fx:id="accountCombo" prefWidth="250" promptText="Choose Account"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="ðŸ”„ Refresh" onAction="#handleRefresh" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-cursor: hand;"/>
    </HBox>

    <TableView fx:id="transactionTable" VBox.vgrow="ALWAYS" style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 1);">
        <columns>
            <TableColumn fx:id="colDate" text="Date" prefWidth="150"/>
            <TableColumn fx:id="colType" text="Type" prefWidth="120"/>
            <TableColumn fx:id="colDescription" text="Description" prefWidth="250"/>
            <TableColumn fx:id="colAmount" text="Amount (ETB)" prefWidth="120" style="-fx-alignment: CENTER-RIGHT;"/>
            <TableColumn fx:id="colBalance" text="Balance" prefWidth="120" style="-fx-alignment: CENTER-RIGHT;"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Close" onAction="#handleClose" style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-padding: 8 20; -fx-cursor: hand;"/>
    </HBox>

</VBox>