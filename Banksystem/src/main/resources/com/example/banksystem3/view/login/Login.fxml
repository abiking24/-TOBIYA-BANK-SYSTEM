<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.banksystem3.client.controller.login.LoginController"
            prefHeight="500.0" prefWidth="700.0"
            style="-fx-background-color: linear-gradient(to bottom right, #2c3e50, #3498db);">

    <VBox alignment="CENTER" spacing="25.0"
          AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0"
          style="-fx-padding: 40;">

        <!-- Header -->
        <VBox alignment="CENTER" spacing="10.0">
            <Text text="ðŸ¦" style="-fx-font-size: 64px;" />
            <Text text="Banking System"
                  style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-fill: white;" />
            <Text text="Secure Banking Management System"
                  style="-fx-font-size: 14px; -fx-fill: #ecf0f1;" />
        </VBox>

        <!-- Login Card -->
        <VBox alignment="CENTER" spacing="20.0"
              style="-fx-background-color: white; -fx-padding: 40; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 0);">

            <Text text="Login to Your Account"
                  style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #2c3e50;" />

            <GridPane hgap="15.0" vgap="20.0" alignment="CENTER">
                <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0"
                       style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="0"
                           prefWidth="250" promptText="Enter username"
                           style="-fx-font-size: 14px; -fx-padding: 8;" />

                <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1"
                       style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="1"
                               prefWidth="250" promptText="Enter password"
                               style="-fx-font-size: 14px; -fx-padding: 8;" />
            </GridPane>

            <!-- Status -->
            <Label fx:id="statusLabel"
                   style="-fx-font-size: 12px; -fx-text-alignment: center;"
                   wrapText="true"
                   maxWidth="300" />

            <!-- Buttons -->
            <HBox spacing="20.0" alignment="CENTER">
                <Button fx:id="loginButton" text="Login" onAction="#handleLogin"
                        style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 10 30; -fx-background-radius: 5;" />
                <Button fx:id="exitButton" text="Exit" onAction="#handleExit"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 10 30; -fx-background-radius: 5;" />
            </HBox>

            <!-- Demo Credentials (Hidden)
            <VBox spacing="5.0" alignment="CENTER" style="-fx-padding: 20 0 0 0;">
                <Text text="Demo Credentials:" style="-fx-font-size: 11px; -fx-fill: #7f8c8d;" />
                <Text text="Admin: admin / admin123" style="-fx-font-size: 11px; -fx-fill: #7f8c8d;" />
                <Text text="Customer: john / john123" style="-fx-font-size: 11px; -fx-fill: #7f8c8d;" />
            </VBox> -->

            <!-- Quick Login for Development -->
            <VBox spacing="5" alignment="CENTER" style="-fx-padding: 10 0 0 0;">
                <Label text="-- For Development --" style="-fx-font-size: 10px; -fx-text-fill: #95a5a6;"/>
                <Button text="Login as Admin" onAction="#handleQuickAdminLogin" style="-fx-background-color: transparent; -fx-text-fill: #3498db; -fx-underline: true;"/>
                <Button text="Login as Customer" onAction="#handleQuickCustomerLogin" style="-fx-background-color: transparent; -fx-text-fill: #3498db; -fx-underline: true;"/>
            </VBox>

        </VBox>

        <!-- Footer -->
        <Text text="Â© 2024 Banking System v3.0 | Secure â€¢ Reliable â€¢ Efficient"
              style="-fx-font-size: 11px; -fx-fill: #bdc3c7;" />
    </VBox>

</AnchorPane>