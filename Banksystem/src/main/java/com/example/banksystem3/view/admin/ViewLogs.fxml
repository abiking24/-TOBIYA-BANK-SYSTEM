<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.banksystem3.client.controller.admin.ViewLogsController">

    <top>
        <HBox style="-fx-background-color: #2c3e50; -fx-padding: 15;" alignment="CENTER_LEFT">
            <Button text="â† Back to Dashboard"
                    onAction="#handleBack"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 5; -fx-padding: 5 15;" />
            <Region HBox.hgrow="ALWAYS" />
            <Text text="ðŸ“‹ System Logs"
                  style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: white;" />
            <Region HBox.hgrow="ALWAYS" />
            <HBox spacing="10">
                <Button text="ðŸ”„ Refresh" onAction="#handleRefresh"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-border-radius: 5; -fx-padding: 5 15;" />
                <Button text="ðŸ“¤ Export" onAction="#handleExport"
                        style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-border-radius: 5; -fx-padding: 5 15;" />
            </HBox>
        </HBox>
    </top>

    <center>
        <VBox spacing="10" style="-fx-padding: 15;">
            <!-- Filter Panel -->
            <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10; -fx-background-color: #f8f9fa; -fx-border-color: #ddd; -fx-border-radius: 5;">
                <Label text="Filter Logs:" style="-fx-font-weight: bold;" />
                <ComboBox fx:id="logLevelCombo" promptText="Log Level" prefWidth="120"/>
                <DatePicker promptText="From Date" />
                <DatePicker promptText="To Date" />
                <TextField promptText="Search in logs..." prefWidth="200" />
                <Button text="ðŸ” Apply Filters"
                        style="-fx-background-color: #3498db; -fx-text-fill: white;" />
                <Button text="ðŸ—‘ï¸ Clear Filters"
                        style="-fx-background-color: #95a5a6; -fx-text-fill: white;" />
            </HBox>

            <!-- Logs Display -->
            <SplitPane dividerPositions="0.3" orientation="HORIZONTAL">
                <!-- Left: Log List -->
                <VBox spacing="5">
                    <Label text="System Logs" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                    <ListView fx:id="logsListView" style="-fx-pref-height: 400;" />
                    <HBox spacing="10" alignment="CENTER">
                        <Label text="Total Logs:" style="-fx-font-weight: bold;" />
                        <Label text="0" style="-fx-text-fill: #3498db; -fx-font-weight: bold;" />
                    </HBox>
                </VBox>

                <!-- Right: Log Details -->
                <VBox spacing="5">
                    <Label text="Log Details" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                    <TextArea fx:id="logDetailsArea" style="-fx-pref-height: 400;"
                              editable="false" wrapText="true" />
                    <HBox spacing="10" alignment="CENTER_RIGHT">
                        <Button text="ðŸ—‘ï¸ Clear Details" onAction="#handleClearLogs"
                                style="-fx-background-color: #95a5a6; -fx-text-fill: white;" />
                        <Button text="ðŸ“‹ Copy"
                                style="-fx-background-color: #3498db; -fx-text-fill: white;" />
                    </HBox>
                </VBox>
            </SplitPane>

            <!-- Log Statistics -->
            <HBox spacing="30" alignment="CENTER" style="-fx-padding: 10; -fx-background-color: #f8f9fa; -fx-border-color: #ddd; -fx-border-radius: 5;">
                <VBox alignment="CENTER" spacing="5">
                    <Label text="INFO" style="-fx-font-weight: bold; -fx-text-fill: #3498db;" />
                    <Label text="0" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                </VBox>
                <VBox alignment="CENTER" spacing="5">
                    <Label text="WARN" style="-fx-font-weight: bold; -fx-text-fill: #f39c12;" />
                    <Label text="0" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                </VBox>
                <VBox alignment="CENTER" spacing="5">
                    <Label text="ERROR" style="-fx-font-weight: bold; -fx-text-fill: #e74c3c;" />
                    <Label text="0" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                </VBox>
                <VBox alignment="CENTER" spacing="5">
                    <Label text="TOTAL" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                    <Label text="0" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                </VBox>
            </HBox>
        </VBox>
    </center>

    <bottom>
        <HBox style="-fx-background-color: #ecf0f1; -fx-padding: 10;" alignment="CENTER">
            <Label text="System Logs â€¢ Audit Trail â€¢ Monitoring â€¢ Security"
                   style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;" />
        </HBox>
    </bottom>

</BorderPane>